# Required
ANTHROPIC_API_KEY=your-api-key-here  # For Claude API -- Format: sk-ant-api03-... (Required)
GEMINI_API_KEY=your-gemini-api-key  # For Google Gemini API -- Format: AIza... (Required for content pipeline)
GITHUB_API_KEY=your-github-token    # GitHub API token with repo access (Required for content pipeline)
STACKOVERFLOW_APP_KEY=your-app-key  # Stack Overflow App Key from Stack Apps (Optional for content pipeline)
PERPLEXITY_API_KEY=pplx-abcde       # For research -- Format: pplx-abcde (Optional, Highly Recommended)

# Optional - defaults shown
MODEL=claude-3-7-sonnet-20250219  # Recommended models: claude-3-7-sonnet-20250219, claude-3-opus-20240229 (Required)
PERPLEXITY_MODEL=sonar-pro        # Make sure you have access to sonar-pro otherwise you can use sonar regular (Optional)
MAX_TOKENS=64000                   # Maximum tokens for model responses (Required)
TEMPERATURE=0.7                   # Temperature for model responses (0.0-1.0) - lower = less creativity and follow your prompt closely (Required)
DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=info                    # Log level (debug, info, warn, error)
DEFAULT_SUBTASKS=5                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME={{Daily Challenge}}  # Project name for tasks.json metadata

# Application Settings
APP_NAME=Daily Challenge
API_PREFIX=/api
ENVIRONMENT=dev                   # Options: dev, test, prod
VERSION=0.1.0
ENABLE_CACHING=false

# Security Settings
SECRET_KEY=change-me-in-production  # Will be auto-generated if not provided
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]  # Comma-separated URLs or JSON array

# Logging Settings 
LOG_LEVEL=INFO                      # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_JSON_FORMAT=false               # Use JSON format for logs (true/false) - recommended for production
LOG_FILE_ENABLED=true               # Enable file logging
LOG_FILE_PATH=./logs                # Path for log files
LOG_MAX_SIZE_MB=10                  # Maximum log file size before rotation
LOG_RETENTION_COUNT=5               # Number of rotated logs to keep

# Email Settings
DEFAULT_FROM_EMAIL=Daily Challenge <no-reply@daily-challenge.app>  # Default sender email
RESEND_API_KEY=Your Resend API key
EMAIL_ENABLED=true                  # Enable/disable email sending

# Content Pipeline Settings
DEFAULT_AI_PROVIDER=gemini           # Default AI provider (gemini, claude)
CONTENT_PIPELINE_ENABLED=true       # Enable/disable content pipeline
CONTENT_AUTO_APPROVE=false          # Auto-approve content or require manual review
CONTENT_BATCH_SIZE=3                # Number of problems to generate per run
CONTENT_TEMPERATURE=0.7             # AI temperature for content generation
GEMINI_MODEL=gemini-pro             # Gemini model to use
CLAUDE_MODEL=claude-3-opus-20240229 # Claude model to use
# Redis settings for Celery
REDIS_URL=redis://localhost:6379/0

# Database Settings
POSTGRES_USER=dcq_user
POSTGRES_PASSWORD=dcq_pass
POSTGRES_DB=dcq_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
# DATABASE_URL is built automatically from the above, but you can override it
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname